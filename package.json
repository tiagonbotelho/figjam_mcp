{
  "name": "figjam-mcp",
  "version": "0.1.0",
  "description": "MCP server for real-time FigJam canvas manipulation via a companion Figma plugin",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "figjam-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "npm run build:server && npm run build:plugin",
    "build:server": "tsc",
    "build:plugin": "node esbuild.plugin.mjs",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.7",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.20.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
